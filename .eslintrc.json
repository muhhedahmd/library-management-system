{
    "parser": "@typescript-eslint/parser", // Use the TypeScript parser
    "plugins": ["@typescript-eslint"], // Enable TypeScript ESLint plugin
    "extends": [
      "next/core-web-vitals",
      "eslint:recommended", // Use recommended ESLint rules
      "plugin:@typescript-eslint/recommended" // Use recommended TypeScript rules
    ],
    "rules": {
        "react/no-unescaped-entities": "off",  // Disable the rule globally
        "@typescript-eslint/no-explicit-any": "warn", // Disable `any` type warnings
        "no-unused-vars": "warn", // Disable unused variable warnings
        "@typescript-eslint/no-unused-vars": "warn", // Disable TypeScript-specific unused variable warnings
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
    }
  }